{
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "strict": true,
    "types": [ "node" ],
    "moduleResolution": "node",
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "lib": [ "es2020", "dom" ]
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "**/tests/**"
  ]
}
